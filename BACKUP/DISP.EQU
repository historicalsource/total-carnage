SCRNST	.EQU	[0,0]	  	;TOP LEFT OF SCREEN
SCRNEND .EQU	[256,400]	;BOTTOM RIGHT OF SCREEN
SCRNMID	.EQU	[128,200]	;MIDPOINT OF SCREEN
