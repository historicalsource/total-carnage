*OBJECT INITIALIZATION TABLE
INITXVAL	.EQU	0
INITYVAL	.EQU	20H
INITIMG		.EQU	40H
INITZPOS	.EQU	60H
INITFLAGS	.EQU	70H
INITID		.EQU	80H
INITXVEL	.EQU	90H
INITYVEL	.EQU	0B0H

